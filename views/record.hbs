<h1>{{title}}</h1>
<form action="{{action}}" method="POST">
  <fieldset>
    <div class="form-group">
      <label for="name">name</label>
      <input type="text" name="name" class="form-control" id="name" value="{{searchResult.name}}" placeholder="Name" required>
    </div>
    <div class="form-group">
      <label for="date">date</label>
      <input type="date" name="date" class="form-control" id="date" value="{{searchResult.date}}" required>
    </div>
    <div class="form-group">
      <label for="amount">amount</label>
      <input type="number" name="amount" class="form-control" id="amount" value="{{searchResult.amount}}" placeholder="Amount" required>
    </div>
    <div class="form-group">
      <label for="category">category</label>
      <select class="form-select" id="category" name="categoryId" id="category" >
        {{#each categoryList}}
          <option value="{{this._id}}" {{this.selected}}><i class="{{this.iconClass}}"></i>{{this.name}}</option>
        {{/each}}
      </select>
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Submit</button>
  </fieldset>
</form>